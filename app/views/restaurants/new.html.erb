<div class="w-50 mx-auto">
<h1>Create a new restaurant</h1>

  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::AUTHORIZED_CATEGORIES %>
    <%= f.button :submit, class: 'btn btn-primary mt-3'%>
  <% end %>

  <%= link_to "Back to Restaurants", restaurants_path, class: 'btn btn-primary mt-3' %>

</div>
