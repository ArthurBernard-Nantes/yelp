<div class='container'>
  <h1>Add a review</h1>
      <%= simple_form_for([@restaurant, @review]) do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: Review::AUTHORIZED_RATING %>
      <%= f.submit 'Submit' %>
    <% end %>

    <%= link_to "Back to Restaurants", restaurants_path, class: 'btn btn-primary' %>
</div>
